<div id="carousel" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    {{#each slides}}
      <div class="carousel-item {{#if @first}}active{{/if}}" data-bs-interval="5000">
        <img
          src="{{#if this.imageUrl}}{{this.imageUrl}}{{else}}/static/images/truck1.jpeg{{/if}}"
          class="slider-image d-block w-100"
          alt="Slide image"
        >
        <div class="carousel-caption d-flex flex-column justify-content-center align-items-center text-center" style="top: 50%; transform: translateY(-50%);">
          <h2 class="text-white fw-bold" style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 1.8);">وايت ماء شمال و شرق الرياض</h2>
          <p class="p1 text-white fs-5" style="text-shadow: 1px 1px 3px rgba(0, 0, 0, 1.8);">توصيل وايت ماء ٣٢ تن الرياض</p>
          <p class="p2 text-white fs-6" style="text-shadow: 1px 1px 3px rgba(0, 0, 0, 1.8);">0538489513 | 0575593602</p>
        </div>
      </div>
    {{/each}}
  </div>

  <!-- Add navigation controls -->
  <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
